@model IEnumerable<Prolimza.Models.HistorialEstadoVenta>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (!User.IsInRole("Lector"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Crear nuevo</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEstadoVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEstado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEstadoVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEstado)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.IdHistorialEstadoVenta">Detalles</a>

                    @if (!User.IsInRole("Lector"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.IdHistorialEstadoVenta">Editar</a> 
                        <a asp-action="Delete" asp-route-id="@item.IdHistorialEstadoVenta">Eliminar</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>

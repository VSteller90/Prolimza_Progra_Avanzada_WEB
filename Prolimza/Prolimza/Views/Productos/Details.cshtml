@model Prolimza.Models.Producto

@{
    ViewData["Title"] = "Details";
}

<head>
    <style>
        .btn-green {
            background-color: #34974d;
            color: white;
            border-color: #34974d;
        }

            .btn-green:hover {
                background-color: #2e8644;
                border-color: #2e8644;
            }

        .card {
            background-color: #34974d;
            color: white;
            border-radius: 0.5rem;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            max-width: 600px;
            margin: 0 auto;
        }

        .card-body {
            padding: 2rem;
        }

        .card-title {
            text-align: center;
            font-weight: 600;
            font-size: 1.5rem;
        }

        .card hr {
            border-color: #e5e7eb;
        }

        .text-center {
            text-align: center;
        }

        .mb-3 {
            margin-bottom: 1rem;
        }

        .me-2 {
            margin-right: 0.5rem;
        }

        .text-danger {
            color: red;
        }
    </style>
</head>

<h1 class="text-center mb-4">Detalles del Producto</h1>

<div class="card text-white mb-3">
    <div class="card-body">
        <h4 class="card-title text-center">Información del Producto</h4>
        <hr class="border-light">

        <p><strong>@Html.DisplayNameFor(model => model.NombreProducto):</strong></p>
        <p>@Html.DisplayFor(model => model.NombreProducto)</p>

        <p><strong>@Html.DisplayNameFor(model => model.Descripcion):</strong></p>
        <p>@Html.DisplayFor(model => model.Descripcion)</p>

        <p><strong>@Html.DisplayNameFor(model => model.Sku):</strong></p>
        <p>@Html.DisplayFor(model => model.Sku)</p>

        <p><strong>@Html.DisplayNameFor(model => model.Cantidad):</strong></p>
        <p>@Html.DisplayFor(model => model.Cantidad)</p>

        <p><strong>@Html.DisplayNameFor(model => model.FechaCaducidad):</strong></p>
        <p>@Html.DisplayFor(model => model.FechaCaducidad)</p>

        <p><strong>@Html.DisplayNameFor(model => model.Bodega):</strong></p>
        <p>@Html.DisplayFor(model => model.Bodega.IdBodega)</p>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.IdProducto" class="btn btn-green me-2">Editar</a>
    <a asp-action="Index" class="btn btn-green">Volver a la lista</a>
</div>


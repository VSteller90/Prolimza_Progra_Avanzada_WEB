@model Prolimza.Models.Usuario

@{
    ViewData["Title"] = "Details";
}

<head>
    <style>
        .btn-green {
            background-color: #34974d;
            color: white;
            border-color: #34974d;
        }

            .btn-green:hover {
                background-color: #2e8644;
                border-color: #2e8644;
            }
    </style>
</head>

<h1 class="text-center mb-4">Detalles del Usuario</h1>

<div class="card text-white mb-3" style="background-color: #34974d; max-width: 600px; margin: 0 auto;">
    <div class="card-body">
        <h4 class="card-title text-center">Información del Usuario</h4>
        <hr class="border-light">

        <p><strong>@Html.DisplayNameFor(model => model.Nombre):</strong></p>
        <p>@Html.DisplayFor(model => model.Nombre)</p>

        <p><strong>@Html.DisplayNameFor(model => model.Correo):</strong></p>
        <p>@Html.DisplayFor(model => model.Correo)</p>

        <p><strong>@Html.DisplayNameFor(model => model.ContrasenaEncriptada):</strong></p>
        <p>@Html.DisplayFor(model => model.ContrasenaEncriptada)</p>

        <p><strong>@Html.DisplayNameFor(model => model.Rol):</strong></p>
        <p>@Html.DisplayFor(model => model.Rol.IdRol)</p>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.IdUsuario" class="btn btn-green me-2">Editar</a>
    <a asp-action="Index" class="btn btn-green">Volver a la lista</a>
</div>


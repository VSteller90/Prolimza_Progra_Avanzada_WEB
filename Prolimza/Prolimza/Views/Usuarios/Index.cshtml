@model IEnumerable<Prolimza.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (!User.IsInRole("Lector"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Crear nuevo</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContrasenaEncriptada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rol)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContrasenaEncriptada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rol.IdRol)
                </td>
                <td>

                    <a asp-action="Details" asp-route-id="@item.IdUsuario">Detalles</a>
                    @if (!User.IsInRole("Lector"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.IdUsuario">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.IdUsuario">Eliminar</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
